<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emsi.baclegend.controller.GameController" styleClass="root">
    
    <!-- Main Game Layer -->
    <BorderPane>
        <top>
             <HBox alignment="CENTER" spacing="40" style="-fx-padding: 24;">
                <VBox alignment="CENTER" styleClass="game-card" prefWidth="180">
                    <Label fx:id="lblLetterLabel" text="ðŸ”¤ Lettre" styleClass="label-muted" />
                    <Label fx:id="lblLettre" text="?" styleClass="letter-display" />
                </VBox>

                <VBox alignment="CENTER" spacing="8" styleClass="game-card" prefWidth="400">
                     <Label fx:id="lblTimeLabel" text="â±ï¸ Temps Restant" styleClass="label-muted"/>
                     <ProgressBar fx:id="progressTimer" prefWidth="360.0" progress="1.0" />
                </VBox>

                <VBox alignment="CENTER" styleClass="game-card" prefWidth="180">
                    <Label fx:id="lblScoreLabel" text="â­ Score" styleClass="label-muted" />
                    <Label fx:id="lblScore" text="0" styleClass="score-display" />
                </VBox>
                
                <VBox alignment="CENTER" styleClass="game-card" prefWidth="150" fx:id="vboxLanguage">
                    <Label fx:id="lblLanguageLabel" text="ðŸŒ Langue" styleClass="label-muted" />
                    <Label fx:id="lblLanguage" text="FranÃ§ais" styleClass="accent-text" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                </VBox>
                
                <!-- Hidden Deprecated Fields to prevent NullPointer if controller refs them -->
                <Label fx:id="lblAdversaireTitle" visible="false"/>
                <Label fx:id="lblAdversaireScore" visible="false"/>
             </HBox>
        </top>

        <center>
            <ScrollPane fitToWidth="true" styleClass="scroll-pane">
                <VBox fx:id="vboxCategories" spacing="16" alignment="CENTER" style="-fx-padding: 24;">
                    <!-- Categories generated dynamically -->
                </VBox>
            </ScrollPane>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 24;">
                <Button fx:id="btnQuit" text="âŒ Quitter" onAction="#handleRetour" styleClass="button, button-danger" prefHeight="50" prefWidth="180" />
                <Button fx:id="btnValider" text="âœ… VALIDER !" onAction="#handleValider" styleClass="button, button-success" prefHeight="60" prefWidth="280" style="-fx-font-size: 20px; -fx-font-weight: 900;" />
            </HBox>
        </bottom>
    </BorderPane>

    <!-- Results Overlay (Hidden by default) -->
    <VBox fx:id="overlayResults" visible="false" alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.9);">
        <VBox styleClass="overlay-panel" alignment="CENTER" spacing="24" maxWidth="640" maxHeight="520">
             <Label fx:id="lblResultTitle" text="RÃ‰SULTATS DU TOUR" styleClass="title-text" />
             <TextArea fx:id="txtResultDetails" editable="false" wrapText="true" prefHeight="320" prefWidth="560" styleClass="text-area"/>
             <HBox spacing="20" alignment="CENTER">
                 <Button fx:id="btnQuitOverlay" text="âŒ Quitter" onAction="#handleRetour" styleClass="button, button-danger" prefHeight="50" prefWidth="180" />
                 <Button fx:id="btnNextRound" text="âž¡ï¸ Tour Suivant / Rejouer" onAction="#handleCloseResults" styleClass="button, button-primary" prefHeight="50" prefWidth="280" />
             </HBox>
        </VBox>
    </VBox>



    <!-- Blur Overlay for Countdown -->
    <StackPane fx:id="countdownOverlay" visible="false" mouseTransparent="true" styleClass="blur-overlay">
        <Label fx:id="lblCountdown" text="READY" alignment="CENTER" styleClass="countdown-ready"/>
    </StackPane>

    <!-- Notification Area (Top Right) -->
    <VBox fx:id="notificationArea" pickOnBounds="false" alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 20;" mouseTransparent="true">
        <!-- Toast notifications will be added here dynamically -->
    </VBox>

</StackPane>
